                recordBtn.innerHTML = '<i class="fas fa-microphone"></i><span>Start Listening</span>';
                recordBtn.classList.remove('active');
            } else {
                recordBtn.innerHTML = '<i class="fas fa-stop"></i><span>Stop Listening</span>';
