<!DOCTYPE html>
<html>
<head>
    <title>Doctor Dashboard</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
</head>
<body class="container mt-4">

    <h1 class="mb-4">Doctor Dashboard</h1>

    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>Patient Name</th>
                <th>Date</th>
                <th>Time</th>
                <th>Reason</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% appointments.forEach(appt => { %>
                <tr>
                    <td><%= appt.patientName %></td>
                    <td><%= appt.date %></td>
                    <td><%= appt.time %></td>
                    <td><%= appt.reason %></td>
                    <td>
                        <% if (appt.status === "Pending") { %>
                            <span class="badge bg-warning text-dark"><%= appt.status %></span>
                        <% } else if (appt.status === "Booked") { %>
                            <span class="badge bg-success"><%= appt.status %></span>
                        <% } else { %>
                            <span class="badge bg-danger"><%= appt.status %></span>
                        <% } %>
                    </td>
                    <td>
                        <form method="POST" action="/doctor/appointments/book" style="display:inline;">
                            <input type="hidden" name="patientName" value="<%= appt.patientName %>">
                            <button class="btn btn-success btn-sm">Book</button>
                        </form>
                        <form method="POST" action="/doctor/appointments/reject" style="display:inline;">
                            <input type="hidden" name="patientName" value="<%= appt.patientName %>">
                            <button class="btn btn-danger btn-sm">Reject</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>

</body>
</html>
